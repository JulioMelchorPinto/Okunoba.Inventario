@model IEnumerable<Inventario.ViewModels.ProductViewModel>
<h1>@ViewData["Title"]</h1>
<h3>@ViewData["Subtitle"]</h3>
<hr />

<p>
    <a class="btn btn-success" asp-action="Create">Nuevo</a>
</p>



@foreach (var product in Model)
{
    <div class="container">
        <div class="row">
            <div class="col-6 align-self-center">
                <div class="card card-body">
                    <button type="button" class="btn btn-default" data-toggle="collapse" data-target="#collapse" aria-expanded="false" aria-controls="collapse">
                        @Html.DisplayFor(modelItem => product.ProductName)
                    </button>
                    <div id="collapse" class="collapse">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                    </div>


                </div>
            </div>
            <div class="col-6">
                <div class="card text-white bg-danger">
                    <div class="card-body">
                        <h3 class="card-title">Taller</h3>
                        <p class="card-text">
                            <table>
                                @foreach (var productType in product.ProductTypes)
                                {
                                    <tr>

                                        <td>@Html.DisplayFor(modelItem => productType)</td>
                                        <td>@Html.DisplayFor(modelItem => product.ProductSizes)</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => product.SumAmount)
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => product.SumWeight)</td>
                                    </tr>
                                }
                            </table>
                        </p>
                        <a href="#" class="btn text-white border-light">Outline</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<hr>
<div class="note">
    Vertical align grid columns of varying height.
</div>

