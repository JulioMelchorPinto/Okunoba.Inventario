@model Inventario.Models.ItemType
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]</h1>
<h3>@ViewData["Subtitle"]</h3>
<hr />
<div class="row">
    <div class="col-md-8">
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ModifiedDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsActive)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Username)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Username)
            </dd>
        </dl>
    </div>
</div>
<div class="btn-group">
    <a class="btn btn-info" asp-action="Save" asp-route-id="@Model.Id">Modificar</a>
    <a class="btn btn-outline-dark" asp-action="Index">Cancel</a>
</div>
@section scripts
{
    <script>
        $(document).ready(function () {
            $('#itemType').on('click', '.js-delete', function () {
                var button = $(this);
                bootbox.confirm(
                    message: "¿Está seguro que desea borrar este elemento?",
                    confirm: {
                    label: 'Eliminar',
                    className: 'btn-success'
                },
                    cancel: {
                    label: 'Cancelar',
                    className: 'btn-danger'
                },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: '/ItemTypes/Delete/' + button.attr('data-id'),
                                method: "POST",
                                success: function () {
                                    button.parents("tr").remove();
                                    toastr.success("El elemento se eliminó con éxito", "Listo!").
                                                                        },
                                error: function () {
                                    toastr.error("No se pudo eliminar la especie", "Error")
                                }
                            });
                        }
                    });
            });
        });
    </script>
}
