@model RoleEdit
<h1 class="bg-info text-white">@ViewData["Title"]</h1>
<h3>A&ntilde;adir usuario a: <label class="badge badge-info text-white"> @Model.Role.Name</label> </h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" name="roleName" value="@Model.Role.Name" />
            <input type="hidden" name="roleId" value="@Model.Role.Id" />


            <table class="table table-responsive table-striped">
                @if (Model.NonMembers.Count() == 0)
                {
                    <tr><td colspan="2">Todos los usuarios son miembros</td></tr>
                }
                else
                {
                    @foreach (AppUser user in Model.NonMembers)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>
                                <input type="checkbox" name="AddIds" value="@user.Id">
                            </td>
                        </tr>
                    }
                }
            </table>

            <h3>Remover usuario del rol: <label class="badge badge-info text-white">@Model.Role.Name</label></h3>
            <table class="table table-responsive table-striped">
                @if (Model.Members.Count() == 0)
                {
                    <tr><td colspan="2">No hay ning&uacute;n miembro</td></tr>
                }
                else
                {
                    @foreach (AppUser user in Model.Members)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>
                                <input type="checkbox" name="DeleteIds" value="@user.Id">
                            </td>
                        </tr>
                    }
                }
            </table>
            <div class="btn-group">
                <button type="submit" class="btn btn-outline-info">Guardar</button>
                <a asp-action="Index" class="btn btn-outline-dark">Cancelar</a>
            </div>
        </form>
    </div>
</div>